{
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],

    // Target Node.js >= v12.x
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",

    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",

    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
